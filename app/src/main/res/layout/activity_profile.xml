<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/O_dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/eight_dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/i_am_nduati" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wachira Nduati"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/O_dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/O_dp"
                android:layout_weight="1"
                android:text="Track: Android" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/O_dp"
                android:layout_weight="1"
                android:text="Country: Kenya" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/O_dp"
                android:layout_weight="1"
                android:text="Email: WachiraNduati@gmail.com" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/O_dp"
                android:layout_weight="1"
                android:text="Phone number: +254705780775" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/O_dp"
                android:layout_weight="1"
                android:text="Slack Username: @Nduati" />
        </LinearLayout>
</LinearLayout>